{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "{{ ansible_user_info.user_meta.created_user.arn }}"
      },
      "Action": "sts:AssumeRole"{% if mfa_required %},
      "Condition": {
        "Bool": {
          "aws:MultiFactorAuthPresent": "true"
        }
      }{% endif %}
    }
  ]
}
